<% @page_title = "Edit Admin User: #{@property.name}" -%>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>


  <h2>Edit <%= @property.name %></h2>

  <div class="row">
	 <div class="col-xs-6">
  <h2><%= @property.name %></h2>
  <%= form_for(:property, :html => {:multipart => true}, :url => {:action => 'update', :id => @property.id}) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f} ) %>


    <%= submit_tag('Update Property') %>

  <% end %>
 	</div>
 	 <div class="col-xs-6">
 	 <ul id="photos" data-update-url="<%= sort_photos_url %>">
 	 	<% @photos.each do |photo| %>
		  <%= content_tag_for :li, photo do %>
		 		<%= image_tag photo.image_url(:thumb).to_s %><br>
		 				 		<%= link_to("Delete", photo_path(photo), method: :delete) %>
		 		<%#= link_to("Delete", {:controller => 'photos', :action => 'destroy', :id => photo.id, :prop_id => @property.id, :method => :delete}) %>
			<%end%>
		<% end %>
	</ul>
	</div>
</div>

  
</div>

